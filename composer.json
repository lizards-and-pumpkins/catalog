{
    "name": "lizards-and-pumpkins/catalog",
    "version": "dev-master",
    "description": "Lizards & Pumpkins catalog module",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vinai Kopp",
            "email": "vinai@lizardsandpumpkins.com"
        },
        {
            "name": "Tim Bezhashvyly",
            "email": "tim@lizardsandpumpkins.com"
        },
        {
            "name": "Fabian Blechschmidt",
            "email": "fabian@lizardsandpumpkins.com"
        }
    ],
    "require": {
        "php": "~5.6.0|~7.0",
        "ext-imagick": "*",
        "lizards-and-pumpkins/lib-key-value-store": "dev-master",
        "lizards-and-pumpkins/lib-queue": "dev-master",
        "league/url": "3.1.1",
        "sebastian/money": "~1.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.7",
        "phpunit/phpunit-mock-objects": ">=2.3.5",
        "lizards-and-pumpkins/coding-standards": "dev-master",
        "league/climate": "~3.2.0",
        "squizlabs/php_codesniffer": "2.*",
        "phploc/phploc": "2.*",
        "pdepend/pdepend": "2.0.6",
        "phpmd/phpmd": "@stable",
        "sebastian/phpcpd": "2.*",
        "theseer/phpdox": "0.7.*",
        "mikey179/vfsStream": "1.5.0"
    },
    "autoload": {
        "psr-4": {"LizardsAndPumpkins\\": "src/"}
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.brera.io"
        }
    ],
    "scripts": {
        "test": [
            "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist",
            "vendor/bin/phpunit -c tests/Integration/phpunit.xml.dist"
        ],
        "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --standard=vendor/lizards-and-pumpkins/coding-standards/src/LizardsAndPumpkins/ src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
