{
    "name": "brera/brera",
    "description": "Brera Proof Of Concept",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vinai Kopp",
            "email": "vinai@brera.io"
        },
        {
            "name": "Tim Bezhashvyly",
            "email": "tim@brera.io"
        },
        {
            "name": "Fabian Blechschmidt",
            "email": "fabian@brera.io"
        }
    ],
    "require": {
        "brera/lib-key-value-store": "dev-master",
        "brera/lib-queue": "dev-master",
        "league/url": "3.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "brera/coding-standards": "dev-master",
        "squizlabs/php_codesniffer": "2.*",
        "phploc/phploc": "2.*",
        "pdepend/pdepend" : "2.0.6",
        "phpmd/phpmd" : "@stable",
        "sebastian/phpcpd": "2.*",
        "theseer/phpdox": "0.7.*"
    },
    "autoload" : {
        "psr-4": { "Brera\\": "src/" }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.brera.io"
        }
    ],
    "scripts" : {
        "test" : [
            "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist",
            "vendor/bin/phpunit -c tests/Integration/phpunit.xml.dist"
        ],
        "sniff" : "vendor/bin/phpcs -p --colors --standard=vendor/brera/coding-standards/src/Brera/ src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
