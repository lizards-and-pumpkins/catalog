{
    "name": "brera/brera",
    "version": "dev-master",
    "description": "Brera Proof Of Concept",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vinai Kopp",
            "email": "vinai@brera.io"
        },
        {
            "name": "Tim Bezhashvyly",
            "email": "tim@brera.io"
        },
        {
            "name": "Fabian Blechschmidt",
            "email": "fabian@brera.io"
        }
    ],
    "require": {
        "php": "~5.6.0|~7.0",
        "ext-imagick": "*",
        "brera/lib-key-value-store": "dev-master",
        "brera/lib-queue": "dev-master",
        "league/url": "3.1.1",
        "sebastian/money": "~1.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.7",
        "phpunit/phpunit-mock-objects": ">=2.3.5",
        "brera/coding-standards": "dev-master",
        "league/climate": "~3.2.0",
        "squizlabs/php_codesniffer": "2.*",
        "phploc/phploc": "2.*",
        "pdepend/pdepend": "2.0.6",
        "phpmd/phpmd": "@stable",
        "sebastian/phpcpd": "2.*",
        "theseer/phpdox": "0.7.*"
    },
    "autoload": {
        "psr-4": {"Brera\\": "src/"}
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.brera.io"
        }
    ],
    "scripts": {
        "test": [
            "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist",
            "vendor/bin/phpunit -c tests/Integration/phpunit.xml.dist"
        ],
        "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --standard=vendor/brera/coding-standards/src/Brera/ src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
